      <div class="bigcard">
        <% @cart.items.each do |item| %>
          <div class="card-cart d-flex justify-content-space-around py-2 cartproduct mx-auto" style="width:400px;">
         <div class="flex-grow-1"> <%= cl_image_tag item.photo.key, height: 100, width: 100, crop: :fill %></div>
            <div class="card-cart-infos-meal ">
              <div class="alignright">
              <h6><%= item.name %> </h6>
              <p>Price <%= humanized_money_with_symbol(item.price) %> </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

        <div>

         <form action="needs-validation mx-auto" class="mx-auto" style="width:400px">
            <div class="form-group" id="check">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                <label class="form-check-label" for="invalidCheck">
                  I confirm the total bill is correct
                </label>
                <div class="invalid-feedback">
                You must confirm before checkout
               </div>
              </div>
            </div>

        <button id="pay" class="btn sisu-btnbill" type="submit">Checkout</button>
        </form>


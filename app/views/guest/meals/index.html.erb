<%= render 'shared/topnavbar' %>
<div class="headline text-center mt-4 pt-3">
  <p><em>What would you like to order
   Mr <%= @booking.guest.first_name %> <%= @booking.guest.last_name %></em> ?</p>
</div>
<div class="inner2 mt-4 py-2">
  <ul class="nav nav-pills justify-content-center" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active btn-outline-light" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Food</a>
    </li>
    <li class="nav-item">
      <a class="nav-link btn-outline-light" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Drinks</a>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      <% @meals[0...11].each do |meal| %>
      <div class="card-product d-flex justify-content-space-around py-2">
        <%= cl_image_tag meal.photo.key, height: 120, width: 120, crop: :fill %>
        <div class="card-product-infos-meal ">
          <div>
            <h6><%= meal.name %> </h6>
            <p>Price <%= humanized_money_with_symbol(meal.price) %> </p>
          </div>
        </div>
          <br>
        <%= render 'meal_cart', meal: meal  %>
      </div>
      <% end %>
      <br>
      <br>
      <br>
    </div>

    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      <% @meals[12...17].each do |meal| %>
      <div class="card-product d-flex justify-content-space-around py-2">
        <%= cl_image_tag meal.photo.key, height: 120, width: 120, crop: :fill %>
        <div class="card-product-infos-meal ">
          <div>
            <h6><%= meal.name %> </h6>
            <p>Price <%= humanized_money_with_symbol(meal.price) %> </p>
          </div>
        </div>
          <br>

        <%= render 'meal_cart', meal: meal  %>
      </div>
      <% end %>
      <br>
      <br>
      <br>
    </div>

<%=  render 'shared/floatbuttonchat' %>

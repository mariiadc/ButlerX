<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag @bill.service.photo_url, width: '100%' %></div>
    <div class="col">
      <h1>bill #<%= @bill.id %> <small><span class="badge badge-primary"><%= @bill.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @bill.created_at.to_date %></li>
        <li><strong>service</strong> <%= @bill.service.name %> [<%= @bill.service_sku %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @bill.total_price %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>

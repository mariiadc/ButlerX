<%= render "shared/topnavbar" %>

<div class="container signup">
  <div class="row justify-content-center m-3 p-4" class="_signup">
    <div class="col-xs-12 col-lg-4 _signup">
      <h2 class="sisu-details" align="center">Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs sisu">
            <div class="form-text-user">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
            </div>
            <div>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
                <p class="additionaltext ">Forgot Password?</p>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
  </div>


  <div class="form-actions _login" align="center">
    <%= f.button :submit, "Submit", class:"sisu-btn"%>
<!--     <%= link_to guest_bookings_path %>
 -->  </div>
</div>
<% end %>
</div>
</div>

<div>
  <p class="additionaltext" id="bottomtext" >Not a member? Sign Up</p>

</div>

<%= render "devise/shared/links" %>

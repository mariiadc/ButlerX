<div class="container signup">
  <div class="row justify-content-center m-3 p-4" class="_signup">
    <div class="col-xs-12 col-lg-4 _signup">
<h2 class="sisu-details" align="center">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs sisu">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions _login" align="center">
    <%= f.button :submit, "Log in", class:"sisu-btn"%>
<!--     <%= link_to guest_bookings_path %>
 -->  </div>
</div>
<% end %>
</div>
<%= render "devise/shared/links" %>
